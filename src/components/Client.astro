---
type Props = {
  image: string;
  name: string;
  description: string;
};

const { image, name, description } = Astro.props;
---

<div class="flex">
  <div class="flex-shrink-0">
    <div
      class="flex items-center justify-center h-24 w-24 rounded-md bg-gray-100 text-white"
    >
      <img src={image} />
    </div>
  </div>
  <div class="ml-4">
    <dt class="text-lg leading-6 font-medium text-gray-900">{name}</dt>
    <dd class="mt-2 text-base text-gray-500">
      {description}
    </dd>
  </div>
</div>
