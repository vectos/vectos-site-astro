---
// import { Icon } from "astro-icon/components";

interface Props {
  variant: "tip" | "caution" | "danger" | "info" | "protip";
}

const { variant } = Astro.props as Props;

let image: string;

switch (variant) {
  case "caution":
  case "danger":
    image = "/img/mark-warned.png";
    break;
  case "protip":
    image = "/img/mark-happy.png";
    break;
  case "info":
  case "tip":
  default:
    image = "/img/mark-protip.png";
}


---

<div
  class:list={[
    "aside prose-p:my-0 my-3 rounded-md border-l-4 px-4 py-3",
    {
      "prose-code:bg-green-400/20 border-green-400 bg-green-400/10 text-green-950":
        variant === "tip",
    },
    {
      "prose-code:bg-yellow-400/20 border-yellow-400 bg-yellow-400/10 text-yellow-950":
        variant === "caution",
    },
    {
      "prose-code:bg-red-400/20 border-red-400 bg-red-400/10 text-red-950":
        variant === "danger",
    },
    {
      "prose-code:bg-sky-400/20 border-sky-400 bg-sky-400/10 text-sky-950":
        variant === "info",
    },
    {
      "prose-code:bg-indigo-400/20 border-indigo-400 bg-indigo-400/10 text-indigo-950":
        variant === "protip",
    },
  ]}
>
  <div class="flex gap-3">
    <img
      src={image}
      alt=""
      class="w-16 h-14 flex-shrink-0 bg-gray-200 border border-gray-300"
    />
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <p class="text-sm font-bold">{variant.toUpperCase()}</p>
      </div>
      <slot />
    </div>
  </div>
</div>
