---
import { CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import Aside from "../../components/Aside.astro";
import ServiceLink from "../../components/ServiceLink.astro";
import YouTubePlayer from "../../components/YouTubePlayer.astro";

const posts = await getCollection("blog");
type Props = CollectionEntry<"blog">;

const { slug } = Astro.params;
const post = posts.find((page) => page.slug === slug);
if (!post) return Astro.redirect("/404");
const { Content } = await post.render();
---

<BlogPost {...post.data} slug={post.slug}>
  <Content components={{ Aside: Aside, ServiceLink: ServiceLink, YouTubePlayer: YouTubePlayer }} />
</BlogPost>
